{
  "name": "marketing-post-generator-mcp",
  "version": "1.0.0",
  "description": "A marketing post generator with MCP (Model Context Protocol) integration",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:local": "MCP_MODE=local node dist/index.js",
    "start:remote": "MCP_MODE=remote node dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t marketing-post-generator-mcp .",
    "docker:run": "docker run -p 3000:3000 marketing-post-generator-mcp",
    "docker:dev": "docker-compose up --build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "content-generation",
    "marketing",
    "blog-posts",
    "claude",
    "ai"
  ],
  "author": "Marketing Post Generator Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/marketing-post-generator-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/marketing-post-generator-mcp/issues"
  },
  "homepage": "https://github.com/yourusername/marketing-post-generator-mcp#readme",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@types/cheerio": "^0.22.35",
    "axios": "^1.10.0",
    "cheerio": "^1.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "winston": "^3.17.0"
  }
}
